.list-item{
  padding: 16rpx 36rpx;
  
}
.list-item + .list-item{
  border-top: 1rpx solid rgb(242,242,242);
}
.ellipsis{
  overflow: hidden;
    /*文本不会换行*/
  white-space: nowrap;
    /*当文本溢出包含元素时，以省略号表示超出的文本*/
  text-overflow: ellipsis;
}
