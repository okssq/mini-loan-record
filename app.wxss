.bill{
  font-size: 14px;
}
.line{
  width: 8rpx;
  background-color: rgb(224,224,224);
  position: relative;
}
.line.active{
  background-color:rgb(166,213,250) ;
}
.line:before {
  position: absolute;
  content: "";
  width: 16rpx;
  height: 8rpx;
  left: -6rpx;
  top: 36rpx;
  background-color: rgb(158 158 158);
}
.line.active:before {
  background-color: rgb(33 150 243);
}
.list-item-hover{
  opacity: 0.9;
  background: #f7f7f7;
}

.bill-title{
  font-size: 20px;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 4px;
}
.bill-text-caption{
  font-size: 28rpx;
  color: rgba(255,255,255,.8);
}
.place-money{
  min-width: 80rpx;
}
.cir-section{
  height: 46rpx;
  line-height: 46rpx;
}

.start-cir::after{
  position: absolute;
  content: '';
  width: 48rpx;
  height: 24rpx;
  background-color: rgb(166,213,250);
  left: -22rpx;
  bottom: -24rpx;
  border-radius:48rpx 48rpx 0 0 ; 
}
.end-cir::after{
  position: absolute;
  content: '';
  width: 48rpx;
  height: 24rpx;
  background-color: rgb(224,224,224);
  left: -22rpx;
  top: -24rpx;
  border-radius:0 0 48rpx 48rpx;
}
