
.page-title{
  font-size: 44rpx;
  white-space: nowrap !important;
}
.list{
  z-index: 12;
  position: relative;
  margin: 0 32rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 2px 0px 0px rgba(255,255,255,.7), 0 -2px 0 rgba(255,255,255,.7),;
  padding: 10rpx 36rpx;
}
.list-item{
  padding: 12rpx 0;
}
.list-item + .list-item{
  border-top: 2rpx dashed rgb(245,245,245);
}
.list-item-hover{
  opacity: 0.9;
  background: #f7f7f7;
}
.ellipsis{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bill-label{
  width: 100%;
  font-size: 34rpx;
  color: #333333;
  margin-bottom: 4rpx;
  font-weight: bold;
}
.bill-label-caption{
  font-size: 28rpx;
  color: #666666;
}
.bill-money{
  font-size: 32rpx;
  color: #555555;
  font-weight: bold;
  width: 200rpx !important;
}

.bill-count{
  text-align: center;
  font-size: 24rpx;
  color: #333333;
  padding-top: 4rpx;
}